@model  List<Models.Entities.HoiThaoDetailForIndex>
@using PagedList.Mvc;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Diễn giả tham dự</h1>
                    @using (Html.BeginForm("Index", "HoiThaoDetail", FormMethod.Get))
                    {
                        <div class="card border-left-primary">
                            <div class="card-body">
                                <div class="row m-xl-4">
                                    <div class="col-md-1">
                                        <b class="blueText">Tên hội thảo</b>
                                    </div>
                                    <div class="col-sm-4">
                                        @Html.DropDownList("HoiThaoID", new SelectList(ViewBag.DSHoiThao, "ID", "TenHoiThao"), "--Chọn Hội Thảo--", htmlAttributes: new { @class = "form-control" })
                                    </div>

                                    <div class="col-md-1">
                                        <b class="blueText">Diễn giả</b>
                                    </div>
                                    


                                </div>
                           
                                <div class="row m-xl-4">
                                    <div class="col-md-2">
                                        <button class="btn btn-facebook">Search</button>
                                    </div>
                                    <div class="col-md-2">
                                        <a href="/Admin/HoiThaoDetail/Index" class="btn btn-facebook">
                                            <span class="icon text-gray-600">
                                                <i class="fas fa-arrow-right"></i>
                                            </span>
                                            <span class="text">Reset</span>
                                        </a>
                                    </div>
                                </div>
                                <hr />

                                <div align="right" class="col-lg-10">
                                    <a href="/Admin/HoiThaoDetail/Create" class="btn btn-primary btn-icon-split">
                                        <span class="icon text-gray-600">
                                            <i class="fas fa-arrow-right"></i>
                                        </span>
                                        <span class="text">Thêm diễn giả tham dự</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                   
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Diễn giả tham dự</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>#</th>
                                            
                                            <th>Tên hội thảo</th>
                                            <th>Tên diễn giả</th>
                                            <th>Chức vụ</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                           
                                            <th>Tên hội thảo</th>
                                            <th>Tên diễn giả</th>
                                            <th>Chức vụ</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>

                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr role="row" class="odd" id="row_@item.ID">
                                            <td>
                                                <a href="/Admin/HoiThaoDetail/Edit/@item.ID" class="btn btn-success btn-circle btn-sm">Sửa </a>

                                            </td>
                                         
                                            <td>@item.TenHoiThao</td>
                                            <td>@item.TenSpeaker</td>
                                            <td>@item.ChucVu</td>
                                            <td>@item.Email</td>
                                            <td>@item.SDT</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->



        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @*<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>*@

    <!-- Bootstrap core JavaScript-->
    <script src="/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Assets/Admin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Assets/Admin/js/demo/datatables-demo.js"></script>

</body>

@model PagedList.IPagedList<Models.Framework.Account>
@using PagedList.Mvc;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Thông tin User</h1>
                    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>
                    <a href="/Admin/User/Create" class="btn btn-light btn-icon-split">
                        <span class="icon text-gray-600">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                        <span class="text">Tạo mới User</span>
                    </a>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Account</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Trạng Thái</th>
                                            <th>Tên Tài Khoản</th>
                                            <th>Mật Khẩu</th>
                                            <th>LoạiTK</th>
                                            <th>Họ Tên</th>
                                            <th>Địa Chỉ</th>
                                            <th>Email</th>
                                            <th>Người tạo</th>
                                            <th>Ngày tạo</th>
                                            <th>Người sửa</th>
                                            <th>Ngày sửa</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>Trạng Thái</th>
                                            <th>Tên Tài Khoản</th>
                                            <th>Mật Khẩu</th>
                                            <th>LoạiTK</th>
                                            <th>Họ Tên</th>
                                            <th>Địa Chỉ</th>
                                            <th>Email</th>
                                            <th>Người tạo</th>
                                            <th>Ngày tạo</th>
                                            <th>Người sửa</th>
                                            <th>Ngày sửa</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="/Admin/User/Edit/@item.IdAccount" class="btn btn-success btn-circle btn-sm">Sửa </a>
                                                    <a href="/Admin/User/Delete/@item.IdAccount" calss="btn btn-danger btn-circle btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                                <td>@item.Status</td>
                                                <td>@item.UserName</td>
                                                <td>@item.PassWord</td>
                                                <td>@item.TypeAccount</td>
                                                <td>@item.HoTen</td>
                                                <td>@item.DiaChi</td>
                                                <td>@item.CreatedBy</td>
                                                <td>@item.CreatedDate</td>
                                                <td>@item.ModifiedBy</td>
                                                <td>@item.ModifiedDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->



        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


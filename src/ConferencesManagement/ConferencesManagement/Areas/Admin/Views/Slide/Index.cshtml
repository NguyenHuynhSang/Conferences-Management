@model PagedList.IPagedList<Models.Entities.SlideForIndex>
@using PagedList.Mvc;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->

                    <h1 class="h3 mb-2 text-gray-800">Thông tin Slide</h1>




                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Slide</h6>

                            @using (Html.BeginForm("Index", "Slide", FormMethod.Get))
                            {
                                <div class="card border-left-primary">
                                    <div class="card-body">
                                        <div class="row m-xl-4">
                                            <div class="col-md-1">
                                                <b class="blueText">Tên hội thảo</b>
                                            </div>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("HoiThaoID", new SelectList(ViewBag.DSHoiThao, "ID", "TenHoiThao"), "--Chọn Hội Thảo--", htmlAttributes: new { @class = "form-control"})
                                            </div>

                                         
                                        </div>


                                        <div class="row m-xl-4">
                                            <div class="col-md-2">
                                                <button  class="btn btn-facebook">Search</button>
                                            </div>
                                            <div class="col-md-2">
                                                <a href="/Admin/Slide/" class="btn btn-facebook">
                                                    <span class="icon text-gray-600">
                                                        <i class="fas fa-arrow-right"></i>
                                                    </span>
                                                    <span class="text">Reset</span>
                                                </a>
                                            </div>
                                        </div>
                                        <hr />

                                        <div align="right" class="col-lg-10">
                                            <a href="/Admin/Slide/Create" class="btn btn-primary btn-icon-split">
                                                <span class="icon text-gray-600">
                                                    <i class="fas fa-arrow-right"></i>
                                                </span>
                                                <span class="text">Tạo mới Slide</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>


                                                        }




                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>#</th>
                                                <th>Tên  Hội Thảo</th>
                                                <th>Hình ảnh</th>
                                                <th>Người tạo</th>
                                                <th>Ngày tạo</th>
                                                <th>Người sửa</th>
                                                <th>Ngày sửa</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>#</th>
                                                <th>#</th>
                                                <th>Tên Hội Thảo</th>
                                                <th>Hình ảnh</th>
                                                <th>Người tạo</th>
                                                <th>Ngày tạo</th>
                                                <th>Người sửa</th>
                                                <th>Ngày sửa</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd" id="row_@item.ID">
                                                    <td>
                                                        <a href="/Admin/User/Edit/@item.ID" class="btn btn-success btn-circle btn-sm">Sửa </a>

                                                    </td>
                                                    <td>

                                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                                            {
                                                                Confirm = "Bạn có muốn xoá bản ghi này?",
                                                                OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                                HttpMethod = "Delete"
                                                            })

                                                    </td>
                                                    <td>@item.TenHoiThao</td>

                                                    <td width="220">
                                                        <img src="@item.Image" height="200" width=" 200" />
                                                    </td>
                                                    <td>@item.CreatedBy</td>
                                                    <td>@item.CreatedDate</td>
                                                    <td>@item.ModifiedBy</td>
                                                    <td>@item.ModifiedDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchingString = ViewBag.SearchingString }))
                                </div>
                            </div>
                        </div>


                        <!-- /.container-fluid -->

                    </div>
                    <!-- End of Main Content -->



                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->
            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>


        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Assets/Admin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Assets/Admin/js/demo/datatables-demo.js"></script>

</body>


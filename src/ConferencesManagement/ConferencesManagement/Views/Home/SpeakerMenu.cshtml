@model List<Models.Framework.Speaker>
<div class="speakers">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title_container text-center">
                    <div class="section_subtitle">see what's all about</div>
                    <div class="section_title"><h1>Speakers</h1></div>
                </div>
            </div>
        </div>
        <div class="row speakers_row">
            @foreach (var item in Model)
            {
                <!-- Speaker -->
                <div class="col-xl-4 col-md-6">
                    <div class="speaker">
                        <div class="speaker_image"><img src="@item.Image" alt=""></div>
                        <div class="speaker_info d-flex flex-column align-items-start justify-content-center">
                            <div class="speaker_name"><a href="#">@item.Name</a></div>
                            <div class="speaker_title">@item.ChucVu</div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>